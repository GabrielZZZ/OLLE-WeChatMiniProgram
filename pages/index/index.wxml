<view wx:if="{{isHide}}">
    <view wx:if="{{canIUse}}" >
        <view class='header'>
            <image src='../images/wxlogin.png'></image>
        </view>
 
        <view class='content'>
            <view>Asking to get following permissions</view>
            <text>Acquiring your public information (name, profile picture, etc.).</text>
        </view>
 
        <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="bindGetUserInfo">
          Authorized Login
        </button>
    </view>
    <view wx:else>Please update your WeChat version.</view>
</view>
 
